{
  "name": "adtech-quicktools",
  "version": "1.0.0",
  "description": "Tools for modern AdTech proof-of-concepts.",
  "scripts": {
    "test": "jest",
    "build": "tsc && npm run bundle-dts",
    "bundle-dts": "dts-bundle-generator -o dist/index.d.ts 'src/**/*.ts'"
  },
  "author": "efosmark",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "rollup": "^4.24.3",
    "ts-jest": "^29.2.5",
    "ws": "^8.18.1"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "src/types",
  "repository": {
    "type": "git",
    "url": "git://github.com/efosmark/adtech-quicktools.git"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.13",
    "@types/ws": "^8.18.0",
    "babel-jest": "^29.7.0",
    "dts-bundle-generator": "^9.5.1",
    "morgan": "^1.10.0",
    "serve-static": "^1.16.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "CLIENT_VERSION": "test.version"
    },
    "rootDir": "./src",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.([tj]s)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}