{
  "name": "adtech-quicktools",
  "version": "1.0.0",
  "description": "Tools for modern AdTech proof-of-concepts.",
  "scripts": {
    "test": "jest",
    "build": "npm run clean && mkdir -p dist/ && npm run tsc && npm run copy-types",
    "tsc": "tsc -p tsconfig.json",
    "clean": "rm -rf dist/",
    "copy-types": "cp -r src/types/* dist/",
    "start:server": "esr src/web-server/server.ts"
  },
  "author": "efosmark",
  "license": "ISC",
  "dependencies": {
    "esbuild": "^0.25.1",
    "esbuild-runner": "^2.2.2",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "rollup": "^4.24.3",
    "ts-jest": "^29.2.5",
    "ws": "^8.18.1"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/efosmark/adtech-quicktools.git"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.13",
    "@types/ws": "^8.18.0",
    "babel-jest": "^29.7.0",
    "dts-bundle-generator": "^9.5.1",
    "morgan": "^1.10.0",
    "serve-static": "^1.16.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "CLIENT_VERSION": "test.version"
    },
    "rootDir": "./src",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.([tj]s)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}