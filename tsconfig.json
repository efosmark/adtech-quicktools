{
    "compilerOptions": {
        "target": "ES5",
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "DOM",
            "ES6",
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/index.ts",
        "src/**/*.d.ts",
        "src/web-server/**/*.ts",
        "src/middleware/**/*.ts",
        "src/serveApp.ts",
    ],
    "typeRoots": [
        "src/**/*.d.ts",
        "node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}