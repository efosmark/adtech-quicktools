{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "composite": true, // Required for some monorepo setups
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}